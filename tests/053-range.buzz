import "std";

test "Range" {
    int limit = 10;
    [int] range = 0..limit;
    std.assert(range.len() == 10, message: "Could create list from range");

    int sum = 0;
    foreach (int n in 0..10) {
        sum = sum + n;
    }
    std.assert(sum == 45, message: "Could iterate over range");
}

test "Inverted range" {
    int limit = 0;
    [int] range = 10..limit;
    std.assert(range.len() == 10, message: "Could create list from inverted range");

    int sum = 0;
    foreach (int n in 10..0) {
        sum = sum + n;
    }
    std.assert(sum == 55, message: "Could iterate over inverted range");
}